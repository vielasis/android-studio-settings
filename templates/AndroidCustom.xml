<templateSet group="AndroidCustom">
  <template name="ser" value="@com.google.gson.annotations.SerializedName(&quot;$varname$&quot;) val $varname$: $type$" description="Gson @SerializedName Kotlin" toReformat="false" toShortenFQNames="true">
    <variable name="varname" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="type" expression="completeSmart()" defaultValue="&quot;String&quot;" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN" value="true" />
      <option name="KOTLIN_COMMENT" value="false" />
      <option name="KOTLIN_EXPRESSION" value="false" />
      <option name="KOTLIN_OBJECT_DECLARATION" value="false" />
      <option name="KOTLIN_STATEMENT" value="false" />
      <option name="KOTLIN_TOPLEVEL" value="false" />
    </context>
  </template>
  <template name="newInst" value="companion object {&#10;    const val TAG = &quot;$KCLASS_SHORT$&quot;&#10;    fun newInstance(args: android.os.Bundle?): $KCLASS$ {&#10;        return $KCLASS$().apply {&#10;            arguments = args&#10;        }&#10;    }&#10;}" description="Fragment new instance" toReformat="true" toShortenFQNames="true">
    <variable name="KCLASS_SHORT" expression="fileNameWithoutExtension()" defaultValue="" alwaysStopAt="true" />
    <variable name="KCLASS" expression="kotlinClassName()" defaultValue="fileNameWithoutExtension()" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
</templateSet>