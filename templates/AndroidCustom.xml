<templateSet group="AndroidCustom">
  <template name="ser" value="@com.google.gson.annotations.SerializedName(&quot;$FIELDNAME$&quot;) val $VARNAME$: $TYPE$" description="Gson @SerializedName Kotlin" toReformat="false" toShortenFQNames="true">
    <variable name="TYPE" expression="completeSmart()" defaultValue="&quot;String&quot;" alwaysStopAt="true" />
    <variable name="VARNAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="FIELDNAME" expression="lowercaseAndDash(VARNAME)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="KOTLIN" value="true" />
      <option name="KOTLIN_COMMENT" value="false" />
      <option name="KOTLIN_EXPRESSION" value="false" />
      <option name="KOTLIN_OBJECT_DECLARATION" value="false" />
      <option name="KOTLIN_STATEMENT" value="false" />
      <option name="KOTLIN_TOPLEVEL" value="false" />
    </context>
  </template>
  <template name="newInst" value="companion object {&#10;    const val TAG = &quot;$KCLASS_SHORT$&quot;&#10;    fun newInstance(args: android.os.Bundle?): $KCLASS$ {&#10;        return $KCLASS$().apply {&#10;            arguments = args&#10;        }&#10;    }&#10;}" description="Fragment new instance" toReformat="true" toShortenFQNames="true">
    <variable name="KCLASS_SHORT" expression="fileNameWithoutExtension()" defaultValue="" alwaysStopAt="true" />
    <variable name="KCLASS" expression="kotlinClassName()" defaultValue="fileNameWithoutExtension()" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
  <template name="plv" value="private lateinit var $KVAR$: $KCLASS$" description="private lateinit var" toReformat="false" toShortenFQNames="true">
    <variable name="KCLASS" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <variable name="KVAR" expression="decapitalize(KCLASS)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
  <template name="del" value="private val $VAR_NAME$: $VIEWMODEL_CLASS$ by $DELEGATE$" description="delegated property" toReformat="true" toShortenFQNames="true">
    <variable name="VIEWMODEL_CLASS" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_NAME" expression="decapitalize(VIEWMODEL_CLASS)" defaultValue="" alwaysStopAt="true" />
    <variable name="DELEGATE" expression="completeSmart()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_TOPLEVEL" value="true" />
    </context>
  </template>
</templateSet>